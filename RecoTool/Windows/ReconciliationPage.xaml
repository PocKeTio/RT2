<UserControl x:Class="RecoTool.Windows.ReconciliationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecoTool.Windows"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
                mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <!-- Force ComboBoxItem alignment to avoid theme templates using ancestor bindings that may fail during dynamic updates -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource BNPBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Compact Ribbon for Reconciliation Page -->
        <Border Grid.Row="0" Background="White" Padding="12,6" Effect="{StaticResource StandardShadow}" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- View Management Section -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,16,0">
                    <Border Background="{DynamicResource BNPMainGreenBrush}" CornerRadius="6" Padding="10,6" Effect="{StaticResource LightShadow}">
                        <Button Style="{StaticResource StandardButtonStyle}" Click="AddView_Click" IsEnabled="{Binding CanInteract}" Background="Transparent" BorderThickness="0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="White" VerticalAlignment="Center" Margin="0,0,6,0" UseLayoutRounding="True" TextOptions.TextFormattingMode="Display"/>
                                <TextBlock FontSize="13" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center">
                                    <Run Text="Add View"/>
                                    <Run Text=" " />
                                    <Run Text="{Binding AddViewModeIndicator, Mode=OneWay}" FontSize="11" FontWeight="Normal"/>
                                </TextBlock>
                            </StackPanel>
                        </Button>
                    </Border>
                </StackPanel>

                <!-- ToDo Management Section -->
                <Border Grid.Column="1" Background="#F8F9FA" CornerRadius="6" Padding="10,6" Margin="0,0,16,0" BorderBrush="#DEE2E6" BorderThickness="1" Effect="{StaticResource LightShadow}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource BNPMainGreenBrush}"/>
                        <TextBlock Text="ToDo:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="SemiBold"/>
                        <ComboBox x:Name="TodoListComboBox" Width="127" Style="{StaticResource ModernComboBoxStyle}"
                                  ItemsSource="{Binding TodoItems}"
                                  DisplayMemberPath="TDL_Name"
                                  SelectedItem="{Binding SelectedTodoItem, Mode=TwoWay}"
                                  SelectionChanged="TodoListComboBox_SelectionChanged"
                                  HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                        <TextBox x:Name="TodoNameTextBox" Width="92" Margin="8,0,0,0" Text="{Binding EditTodoName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Style="{StaticResource StandardButtonStyle}" Margin="8,0,0,0" Height="26" Padding="10,0" Click="TodoAdd_Click"><TextBlock Text="Add"/></Button>
                        <Button Style="{StaticResource StandardButtonStyle}" Margin="4,0,0,0" Height="26" Padding="10,0" Click="TodoSave_Click"><TextBlock Text="Save"/></Button>
                        <Button Style="{StaticResource StandardButtonStyle}" Margin="4,0,0,0" Height="26" Padding="10,0" Click="TodoDelete_Click"><TextBlock Text="Delete"/></Button>
                        <Button Style="{StaticResource StandardButtonStyle}" Margin="8,0,0,0" Height="26" Padding="10,0" Click="TodoExit_Click" ToolTip="Exit ToDo mode" Visibility="{Binding IsTodoMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="Exit ToDo"/>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Data Scope Section -->
                <Border Grid.Column="2" Background="#F8F9FA" CornerRadius="6" Padding="10,6" Margin="0,0,16,0" BorderBrush="#DEE2E6" BorderThickness="1" Effect="{StaticResource LightShadow}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE8C9;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource BNPMainGreenBrush}" UseLayoutRounding="True" TextOptions.TextFormattingMode="Display"/>
                        <ComboBox x:Name="AccountComboBox" Width="110" ItemsSource="{Binding Accounts}" SelectedItem="{Binding SelectedAccount, Mode=TwoWay}" IsEditable="False" Style="{StaticResource ModernComboBoxStyle}" IsEnabled="{Binding CanChangeAccount}"
                                  HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                        <Rectangle Width="1" Height="24" Fill="#DEE2E6" Margin="12,0"/>
                        <ComboBox x:Name="StatusComboBoxInline" Width="100" ItemsSource="{Binding Statuses}" SelectedItem="{Binding SelectedStatus, Mode=TwoWay}" IsEditable="False" Style="{StaticResource ModernComboBoxStyle}" IsEnabled="{Binding CanChangeStatus}"
                                  HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Saved Items Section -->
                <Border Grid.Column="3" Background="#F8F9FA" CornerRadius="6" Padding="10,6" Margin="0,0,16,0" BorderBrush="#DEE2E6" BorderThickness="1" Effect="{StaticResource LightShadow}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE71C;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource BNPMainGreenBrush}" UseLayoutRounding="True" TextOptions.TextFormattingMode="Display"/>
                        <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="0,0,4,0" FontWeight="SemiBold"/>
                        <ComboBox x:Name="SavedFiltersComboBox" Width="130" Style="{StaticResource ModernComboBoxStyle}" IsEnabled="{Binding CanUseSavedControls}"
                                  ItemsSource="{Binding SavedFilters}"
                                  DisplayMemberPath="UFI_Name"
                                  SelectionChanged="SavedFiltersComboBox_SelectionChanged"
                                  HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                        <Rectangle Width="1" Height="24" Fill="#DEE2E6" Margin="12,0"/>
                        <TextBlock Text="View:" VerticalAlignment="Center" Margin="0,0,4,0" FontWeight="SemiBold"/>
                        <ComboBox x:Name="SavedViewsComboBox" Width="130" Style="{StaticResource ModernComboBoxStyle}" IsEnabled="{Binding CanUseSavedControls}"
                                  ItemsSource="{Binding SavedViews}"
                                  SelectedItem="{Binding SelectedSavedView, Mode=TwoWay}"
                                  DisplayMemberPath="Name"
                                  SelectionChanged="SavedViewsComboBox_SelectionChanged"
                                  HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- View Type & Tools Section -->
                <Border Grid.Column="4" Background="#F8F9FA" CornerRadius="6" Padding="10,6" Margin="0,0,16,0" BorderBrush="#DEE2E6" BorderThickness="1" Effect="{StaticResource LightShadow}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE8A9;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{DynamicResource BNPMainGreenBrush}" UseLayoutRounding="True" TextOptions.TextFormattingMode="Display"/>
                        <ComboBox x:Name="ViewTypeComboBox" Width="110" ItemsSource="{Binding ViewTypes}" SelectedItem="{Binding SelectedViewType, Mode=TwoWay}" IsEditable="False" Style="{StaticResource ModernComboBoxStyle}" IsEnabled="{Binding CanInteract}"
                                  HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Quick Actions -->
                <StackPanel Grid.Column="5" Orientation="Horizontal">
                    <Button Style="{StaticResource StandardButtonStyle}" Padding="10,6" Click="OpenInvoiceFinder_Click" IsEnabled="{Binding CanInteract}" ToolTip="Open Invoice Finder" Background="#F0F7FF" BorderBrush="#2196F3" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#2196F3" VerticalAlignment="Center" Margin="0,0,5,0" UseLayoutRounding="True" TextOptions.TextFormattingMode="Display"/>
                            <TextBlock Text="Invoice Finder" FontSize="12" Foreground="#2196F3" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Status Indicators -->
                <StackPanel Grid.Column="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="16,0,0,0">
                    <Border Background="#FFF9E6" BorderBrush="#FFC107" BorderThickness="1" CornerRadius="6" Padding="8,5" Visibility="{Binding IsGlobalLockActive, Converter={StaticResource BooleanToVisibilityConverter}}" Effect="{StaticResource LightShadow}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE785;" FontFamily="Segoe MDL2 Assets" FontSize="12" VerticalAlignment="Center" Margin="0,0,6,0" Foreground="#FFC107" UseLayoutRounding="True" TextOptions.TextFormattingMode="Display"/>
                            <TextBlock Text="Import in progress" VerticalAlignment="Center" Foreground="#795548" FontSize="11" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- (Removed ToDo Mode Toggle and right-aligned selector) -->

            </Grid>
        </Border>

        <!-- Main Content Area - Will contain dynamically added views -->
        <Grid Grid.Row="1">
            <!-- Loading indicator -->
            <Border Background="#80FFFFFF" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" Panel.ZIndex="99">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Loading data..." FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10" />
                    <ProgressBar IsIndeterminate="True" Width="200" Height="10" />
                </StackPanel>
            </Border>
            <!-- Views Container - Horizontal stacking of multiple views -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel x:Name="ViewsPanel" Orientation="Vertical" Visibility="Collapsed" HorizontalAlignment="Stretch" />
            </ScrollViewer>

            <!-- Floating Add Button - Visible when at least one view is open -->
            <Button x:Name="FloatingAddButton" Style="{StaticResource StandardButtonStyle}" Width="50" Height="50" 
                    HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" 
                    Click="AddView_Click" Visibility="Collapsed" Padding="0" ToolTip="Add another view" IsEnabled="{Binding CanInteract}">
                <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="20" />
            </Button>

            <!-- Empty State - Shown when no views are open -->
            <Border x:Name="EmptyStatePanel" Margin="30" Background="{DynamicResource BNPSectionBackground}" CornerRadius="8" BorderBrush="{DynamicResource BNPBorderBrush}" BorderThickness="1" Effect="{StaticResource LightShadow}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Ellipse Width="100" Height="100" Fill="{DynamicResource BNPLightGreenBrush}" Opacity="0.2" Margin="0,0,0,10"/>
                    <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="48" Foreground="{DynamicResource BNPMainGreenBrush}" HorizontalAlignment="Center" Margin="0,-85,0,40"/>
                    <TextBlock Text="No reconciliation views open" FontSize="22" FontWeight="SemiBold" Foreground="{DynamicResource BNPMainGreenBrush}" Margin="0,0,0,10"/>
                    <TextBlock Text="Click the button below to start reconciling accounts" FontSize="14" Foreground="#666666" HorizontalAlignment="Center" TextWrapping="Wrap" MaxWidth="400" TextAlignment="Center"/>
                    <Button Style="{StaticResource StandardButtonStyle}" Margin="0,30,0,0" Width="180" Height="42" Click="AddView_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Add Reconciliation View" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>