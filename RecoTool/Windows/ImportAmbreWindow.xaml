<Window x:Class="RecoTool.Windows.ImportAmbreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AMBRE Data Import - DWINGS/AMBRE Reconciliation Tool"
        Height="650" Width="900" WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BNPBackground}">

    <Window.Resources>
        <!-- Styles -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource BNPMainGreenBrush}"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="ImportButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="{DynamicResource BNPMainGreenBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BNPLightGreenBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BNPDarkGreenBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource BNPMainGreenBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="White" CornerRadius="50" Width="50" Height="50" Margin="0,0,15,0">
                        <TextBlock Text="&#xE8B5;" FontFamily="Segoe MDL2 Assets" FontSize="24" 
                                   Foreground="{DynamicResource BNPMainGreenBrush}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="AMBRE Data Import" FontSize="22" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Import and transformation of AMBRE Excel files" FontSize="13" Foreground="White" Opacity="0.9"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="OpenReconciliationImportButton" Content="Reconciliation Import" Style="{StaticResource ImportButtonStyle}" Click="OpenReconciliationImportButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="20" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Section 1: Sélection du pays et fichier -->
                <TextBlock Text="1. File Selection" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="20" Margin="0,0,0,20" CornerRadius="6">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Sélection du pays -->

                        <!-- Sélection du fichier -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Excel File:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,10,0,0"/>
                        <TextBox x:Name="FilePathTextBox1" Grid.Row="1" Grid.Column="1" Margin="10,15,10,5" 
                                 IsReadOnly="True" Background="#F8F9FA"/>
                        <Button x:Name="BrowseFileButton1" Grid.Row="1" Grid.Column="2" Content="Browse..." 
                                Margin="0,15,0,5" Padding="15,8" Click="BrowseFile1Button_Click"/>

                        <!-- Informations du fichier 1 -->
                        <TextBlock x:Name="FileInfoText1" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" 
                                   Margin="10,5" Foreground="#6C757D" FontStyle="Italic"/>

                        <!-- Sélection du second fichier (optionnel) -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Excel File 2 (optional):" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,10,0,0"/>
                        <TextBox x:Name="FilePathTextBox2" Grid.Row="3" Grid.Column="1" Margin="10,15,10,5" 
                                 IsReadOnly="True" Background="#F8F9FA"/>
                        <Button x:Name="BrowseFileButton2" Grid.Row="3" Grid.Column="2" Content="Browse..." 
                                Margin="0,15,0,5" Padding="15,8" Click="BrowseFile2Button_Click"/>

                        <!-- Informations du fichier 2 -->
                        <TextBlock x:Name="FileInfoText2" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" 
                                   Margin="10,5" Foreground="#6C757D" FontStyle="Italic"/>
                    </Grid>
                </Border>

                <!-- Section 2: Options d'import -->

                <!-- Section 3: Aperçu du mapping -->

                <!-- Section 4: Progression de l'import -->
                <TextBlock Style="{StaticResource SectionHeaderStyle}"><Run Language="en-gb" Text="2"/><Run Text=". Import Progress"/></TextBlock>
                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="20" Margin="0,0,0,20" CornerRadius="6">
                    <StackPanel>
                        <ProgressBar x:Name="ImportProgressBar" Height="20" Margin="0,0,0,10"/>
                        <TextBlock x:Name="ProgressStatusText" Text="Ready for import" 
                                   Style="{StaticResource StatusTextStyle}" HorizontalAlignment="Center"/>

                        <ScrollViewer x:Name="LogScrollViewer" Height="150" Margin="0,10,0,0" 
                                      VerticalScrollBarVisibility="Auto" Background="#F8F9FA" 
                                      BorderBrush="#E0E0E0" BorderThickness="1">
                            <TextBlock x:Name="ImportLogText" Padding="10" FontFamily="Consolas" FontSize="12"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer avec boutons d'action -->
        <Border Grid.Row="2" Background="#F8F9FA" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="StatusSummaryText" Text="No file selected" 
                               VerticalAlignment="Center" Foreground="#6C757D"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="ImportButton" Content="Start Import" Style="{StaticResource ImportButtonStyle}" 
                            Click="ImportButton_Click" IsEnabled="True" Margin="0,0,10,0"/>
                    <Button x:Name="CancelButton" Content="Cancel" Padding="15,8" 
                            Click="CancelButton_Click" Background="#6C757D" Foreground="White" 
                            BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>
