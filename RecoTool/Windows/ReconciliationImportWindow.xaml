<Window x:Class="RecoTool.Windows.ReconciliationImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Reconciliation Import - DWINGS/AMBRE Reconciliation Tool"
        Height="650" Width="900" WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BNPBackground}">

    <Window.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource BNPMainGreenBrush}"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="ImportButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="{DynamicResource BNPMainGreenBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BNPLightGreenBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource BNPDarkGreenBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource BNPMainGreenBrush}" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="White" CornerRadius="50" Width="50" Height="50" Margin="0,0,15,0">
                        <TextBlock Text="&#xE8B5;" FontFamily="Segoe MDL2 Assets" FontSize="24" 
                                   Foreground="{DynamicResource BNPMainGreenBrush}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Reconciliation Import" FontSize="22" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Import reconciliation Excel using mapping template" FontSize="13" Foreground="White" Opacity="0.9"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="20" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Section 1: File Selection -->
                <TextBlock Text="1. File Selection" Style="{StaticResource SectionHeaderStyle}"/>
                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="20" Margin="0,0,0,20" CornerRadius="6">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Mapping file selector -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Mapping Excel:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <TextBox x:Name="MappingFileTextBox" Grid.Row="0" Grid.Column="1" Margin="10,5" IsReadOnly="True" Background="#F8F9FA"/>
                        <Button x:Name="BrowseMappingButton" Grid.Row="0" Grid.Column="2" Content="Browse..." Margin="0,5" Padding="15,8" Click="BrowseMappingButton_Click"/>
                        <TextBlock x:Name="FileInfoMappingText" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="10,0,0,10" Foreground="#6C757D" FontStyle="Italic"/>

                        <!-- Data file selector -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Reconciliation Data:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <TextBox x:Name="DataFileTextBox" Grid.Row="2" Grid.Column="1" Margin="10,5" IsReadOnly="True" Background="#F8F9FA"/>
                        <Button x:Name="BrowseDataButton" Grid.Row="2" Grid.Column="2" Content="Browse..." Margin="0,5" Padding="15,8" Click="BrowseDataButton_Click"/>
                        <TextBlock x:Name="FileInfoDataText" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="10,0,0,0" Foreground="#6C757D" FontStyle="Italic"/>
                    </Grid>
                </Border>

                <!-- Section 2: Import Progress -->
                <TextBlock><Run Language="en-gb" Text="2"/><Run Text=". Import Progress"/></TextBlock>
                <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Padding="20" Margin="0,0,0,20" CornerRadius="6">
                    <StackPanel>
                        <ProgressBar x:Name="ImportProgressBar" Height="20" Margin="0,0,0,10"/>
                        <TextBlock x:Name="ProgressStatusText" Text="Ready for import" Style="{StaticResource StatusTextStyle}" HorizontalAlignment="Center"/>
                        <ScrollViewer x:Name="LogScrollViewer" Height="180" Margin="0,10,0,0" VerticalScrollBarVisibility="Auto" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="1">
                            <TextBlock x:Name="ImportLogText" Padding="10" FontFamily="Consolas" FontSize="12"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#F8F9FA" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="StatusSummaryText" Text="Select mapping and data files" VerticalAlignment="Center" Foreground="#6C757D"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="ImportButton" Content="Start Import" Style="{StaticResource ImportButtonStyle}" Click="ImportButton_Click" IsEnabled="False" Margin="0,0,10,0"/>
                    <Button x:Name="CancelButton" Content="Close" Padding="15,8" Click="CancelButton_Click" Background="#6C757D" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>
